<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:gravity="center_horizontal|center_vertical|clip_horizontal|clip_vertical|center"
    android:layout_gravity="center_horizontal|center_vertical|clip_horizontal|clip_vertical|center"
    android:background="#00FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical|clip_horizontal|clip_vertical|center"
        android:gravity="center_horizontal|center_vertical|clip_horizontal|clip_vertical|center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/updateimgfinal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Update Available"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeStepGranularity="2sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have noticed you are using an \nolder version of the app.\nWe recommend you upgrade to \n new version."
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>

            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/updateappbtn"
                android:text="UPDATE"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeStepGranularity="1sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>